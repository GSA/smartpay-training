---
const { id, pages, training_category } = Astro.props;
---
  
<div class="usa-layout-docs__sidenav desktop:grid-col-3">
  <nav aria-label="Secondary navigation">
    <ul class="usa-sidenav">
      {pages.map(page => (
        <li class="usa-sidenav__item">
          <a 
            class={id === page.id ? 'usa-current' : null } 
            href={`${import.meta.env.BASE_URL}${training_category}/${page.slug}`}
          >{page.data.title}
          </a>
        </li>))}
    </ul>
  </nav>
</div>
